  "repository": {
    "type": "git",
    "url": "git+https://github.com/maierfelix/webgpu.git"
  },
  "keywords": [
    "webgpu",
    "vulkan",
    "dawn",
    "gpu",
    "gpgpu"
  ],
  "author": "Felix Maier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maierfelix/webgpu/issues"
  },
  "homepage": "https://github.com/maierfelix/webgpu#readme",
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "tests"
  }
